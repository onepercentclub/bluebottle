{% load bb_ember %}
{% load i18n %}
{% load static %}


{% tplhandlebars "my_project_review" %}

    <div class="l-section" id="campaign-create">

    	{{partial "my_project_top"}}

        <div class="l-section" id="manage-project">

            <div class="l-wrapper">

                <article class="l-content">
                    <header class="page-header">
                        <h2>{% trans "Your plan is in review now" %}</h2>
                        <p>We'll get back to you soon!</p>
                    </header>
                </article>
            </div>

            {% block_verbatim toolbox_content %}
            <div class="toolbox">

                <h3 class="toolbox-title">
                    <em class="flaticon solid wrench-1"></em>
                    {% trans "Crowdsourcing" %}
                </h3>

                <div class="toolbox-content">
                    <p>{% trans "Do you need someone to help writing your business plan?" %}</p>
                    {{#link-to "taskNew" id tagName="button" class="btn btn-iconed"}}
                        <em class="flaticon solid wrench-1"></em>
                        {% trans "Create a new task" %}
                    {{/link-to}}
                </div>

            </div>
            {% endblock_verbatim %}

        </div>
    </div>


{% endtplhandlebars %}
