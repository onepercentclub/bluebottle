{% load bb_ember %}
{% load i18n %}
{% load static %}


{% tplhandlebars "my_project_story" %}

    <legend>
        <strong>{% trans "Project story" %}</strong>
    </legend>

    <fieldset>
        <ul>

            {{bb-text-area rows='10' label='Why, what and how' hint='Describe your project in more detail.' valueBinding=description
                placeholder='Describe your project' errors=errors.description}}

            {{bb-text-field type='number' label='Number of lives changed' hint='How many lives do you expect to change?'
                valueBinding=reach placeholder='e.g. 20' errors=errors.reach}}
        </ul>
    </fieldset>

{% endtplhandlebars %}
