{% load bb_ember %}
{% load i18n %}
{% load static %}

{% tplhandlebars "_my_project_submit_story_fields" %}

    {{#unless validStory}}
        {{#each field in missingFieldsStory}}
            <li>
                <div class="category">
                    {% trans "Description" %}
                </div>
                <div class="details">
                    {{#link-to "myProject.story"}}{{field}}{{/link-to}} {% trans "is not filled in" %}.
                </div>
                <div class="action">
                    {{#link-to "myProject.story"}}<span class="flaticon solid checkmark-2"></span>{% trans "Let's fix this" %}{{/link-to}}
                </div>
            </li>
        {{/each}}
    {{/unless}}

{% endtplhandlebars %}
