{% load i18n %}
{% load bb_ember %}

{% tplhandlebars "_footer" %}

    <div class="l-section" id="footer" >
        <div class="l-wrapper">
            <section class="footer-content">
                <ul class="footer-menu">
                    <li>
                        {% block_verbatim  'footer_block1' %}
                            <h3>{% blocktrans %}Get involved{% endblocktrans %}</h3>
                            <ul>
                                <li>
                                    <a {{action 'showPage' 'about'}} href="/#!/pages/about">
                                        {% blocktrans %}About{% endblocktrans %}
                                    </a>
                                </li>
                            </ul>
                        {% endblock_verbatim %}
                    </li>

                    <li>
                        {% block_verbatim  'footer_block2' %}
                            <h3>{% blocktrans %}About Bluebottle{% endblocktrans %}</h3>
                            <ul>
                                <li>
                                    <a {{action 'showPage' 'faq'}} href="/#!/pages/faq">{% trans "Frequently Asked Questions" %}</a>
                                </li>
                                <li>
                                    <a {{action 'showPage' 'work'}} href="/#!/pages/work">
                                        {% blocktrans %}Work at Bluebottle{% endblocktrans %}
                                    </a>
                                </li>
                                <li>
                                    {% trans "Contact" %}
                                </li>
                            </ul>
                        {% endblock_verbatim %}

                    </li>

                    <li>
                        {% block_verbatim  'footer_block3' %}
                            <h3>{% trans "Discover More" %}</h3>
                            <ul>
                                <li>
                                    <a {{action 'showPage' 'more'}} href="/#!/pages/more">
                                        {% trans "More about Bluebottle" %}
                                    </a>
                                </li>
                                <li>
                                    <a  href="http://github.com/onepercentclub/bluebottle">
                                        {% trans "Github" %}
                                    </a>
                                </li>

                            </ul>
                        {% endblock_verbatim %}
                    </li>

                    <li>
                        {% block_verbatim  'footer_block4' %}
                            <h3>{% blocktrans %}Social{% endblocktrans %}</h3>
                            <iframe src="//www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2Fonepercentclub&amp;send=false&amp;layout=button_count&amp;width=450&amp;show_faces=false&amp;font&amp;colorscheme=light&amp;action=like&amp;height=21&amp;appId=265978350087756" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:90px; height:21px;" allowTransparency="true"></iframe>
                            <iframe allowtransparency="true" frameborder="0" scrolling="no" src="http://platform.twitter.com/widgets/tweet_button.html?url=http%3A%2F%2Fonepercentclub.com&text=" style="width:115px; height:21px;"></iframe>
                            <ul class="footer-social-links">
                                <li>
                                    <a href="http://www.facebook.com/onepercentclub" target="_blank">
                                        <span class="flaticon social facebook-1"></span>
                                    </a>
                                </li>
                                <li>
                                    <a href="http://twitter.com/1percentclub" target="_blank">
                                        <span class="flaticon social twitter-1"></span>
                                    </a>
                                </li>
                                <li>
                                    <a href="http://www.flickr.com/photos/1procentclub/" target="_blank">
                                        <span class="flaticon social flickr-1"></span>
                                    </a>
                                </li>
                                <li>
                                    <a href="http://www.linkedin.com/groups?gid=1071287&trk=hb_side_g" target="_blank">
                                        <span class="flaticon social linkedin-1"></span>
                                    </a>
                                </li>
                                <li>
                                    <a href="http://www.youtube.com/user/1Procentclub" target="_blank">
                                        <span class="flaticon social youtube-1"></span>
                                    </a>
                                </li>
                            </ul>
                        {% endblock_verbatim %}
                    </li>
                </ul>

                <hr />

                <div class="footer-news">
                    <h3>{% trans "News" %}</h3>
                    <ul>
                    {{#each news}}
                        <li>
                            <a {{action 'showNews' this.id}}>
                                <span class="flaticon solid right-2"></span> {{ title }}
                            </a>
                        </li>
                    {{/each}}
                    </ul>
                </div>

                {{#unless currentUser.isAuthenticated}}
                    {% block_verbatim  'footer_join' %}
                        <div class="footer-join-us">
                            <h3>{% blocktrans %}Join Bluebottle{% endblocktrans %}</h3>
                            <p>{% blocktrans %}Join our project!{% endblocktrans %}</p>
                            {{#link-to 'signup' classNames="btn btn-primary"}}{% blocktrans %}Join Bluebottle{% endblocktrans %}{{/link-to}}
                        </div>
                    {% endblock_verbatim %}
                {{/unless}}

            </section>
        </div>

        <div class="l-section copyright">
            <div class="l-wrapper">
                {% block_verbatim  'footer_copyright' %}
                    <ul>
                        <li>
                            &copy;2013 Bluebottle
                        </li>
                        <li>
                            <a {{action 'showPage' 'terms-and-conditions'}} href="/#!/pages/terms-and-conditions">{% trans "General Conditions" %}</a>&nbsp;
                            <a {{action 'showPage' 'privacy'}} href="/#!/pages/privacy">{% trans "Privacy Policy" %}</a>
                        </li>
                        <li>
                            {% trans "Give us feedback" %}
                        </li>
                    </ul>
                {% endblock_verbatim %}
            </div>
        </div>

    </div>

{% endtplhandlebars %}